{
  "title": "Ctrl+N to Down Arrow",
  "rules": [
    {
      "description": "Ctrl+N to Down Arrow",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "n",
            "modifiers": {
              "mandatory": ["control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "nvim_mode",
              "value": 0
            }
          ]
        }
      ]
    }
  ]
}
