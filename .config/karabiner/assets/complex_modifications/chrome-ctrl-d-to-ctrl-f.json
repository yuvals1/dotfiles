{
  "title": "Ctrl+D to Ctrl+F in Chrome",
  "rules": [
    {
      "description": "Map Ctrl+D to Ctrl+F in Chrome",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "d",
            "modifiers": {
              "mandatory": ["control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "f",
              "modifiers": ["control"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^com\\.google\\.Chrome$"]
            }
          ]
        }
      ]
    }
  ]
}
