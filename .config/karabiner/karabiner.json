{
  "global": {
    "check_for_updates_on_startup": true,
    "show_in_menu_bar": true,
    "show_profile_name_in_menu_bar": false
  },
  "profiles": [
    {
      "name": "Default profile",
      "selected": true,
      "simple_modifications": [],
      "complex_modifications": {
        "rules": [
          {
            "description": "Caps Lock to Ctrl when held, Escape when tapped",
            "manipulators": [
              {
                "type": "basic",
                "from": {
                  "key_code": "caps_lock",
                  "modifiers": {
                    "optional": ["any"]
                  }
                },
                "to": [
                  {
                    "key_code": "left_control",
                    "lazy": true
                  }
                ],
                "to_if_alone": [
                  {
                    "key_code": "escape"
                  }
                ]
              }
            ]
          },
          {
            "description": "Ctrl+Comma to Return",
            "manipulators": [
              {
                "type": "basic",
                "from": {
                  "key_code": "comma",
                  "modifiers": {
                    "mandatory": ["control"],
                    "optional": ["any"]
                  }
                },
                "to": [
                  {
                    "key_code": "return_or_enter"
                  }
                ]
              }
            ]
          },
          {
            "description": "Ctrl+Period to Backspace",
            "manipulators": [
              {
                "type": "basic",
                "from": {
                  "key_code": "period",
                  "modifiers": {
                    "mandatory": ["control"],
                    "optional": ["any"]
                  }
                },
                "to": [
                  {
                    "key_code": "delete_or_backspace"
                  }
                ]
              }
            ]
          },
          {
            "description": "Command+Comma to Shift+Enter",
            "manipulators": [
              {
                "type": "basic",
                "from": {
                  "key_code": "comma",
                  "modifiers": {
                    "mandatory": ["command"],
                    "optional": ["any"]
                  }
                },
                "to": [
                  {
                    "key_code": "return_or_enter",
                    "modifiers": ["shift"]
                  }
                ]
              }
            ]
          }
        ]
      }
    }
  ]
}
