{
  "global": {
    "check_for_updates_on_startup": true,
    "show_in_menu_bar": true,
    "show_profile_name_in_menu_bar": false
  },
  "profiles": [
    {
      "name": "Default profile",
      "selected": true,
      "simple_modifications": [],
      "complex_modifications": {
        "rules": [
          {
            "description": "Caps Lock to Ctrl",
            "manipulators": [
              {
                "type": "basic",
                "from": {
                  "key_code": "caps_lock",
                  "modifiers": {
                    "optional": ["any"]
                  }
                },
                "to": [
                  {
                    "key_code": "left_control"
                  }
                ]
              }
            ]
          },
          {
            "description": "j+k to Escape",
            "manipulators": [
              {
                "type": "basic",
                "from": {
                  "simultaneous": [
                    {"key_code": "j"},
                    {"key_code": "k"}
                  ],
                  "simultaneous_options": {
                    "detect_key_down_uninterruptedly": true,
                    "key_down_order": "strict",
                    "key_up_order": "strict_inverse",
                    "key_up_when": "any",
                    "to_after_key_up": [
                      {"set_variable": {"name": "j_and_k_pressed", "value": 0}}
                    ]
                  }
                },
                "to": [
                  {"set_variable": {"name": "j_and_k_pressed", "value": 1}},
                  {"key_code": "escape"}
                ],
                "conditions": [{"type": "variable_if", "name": "j_and_k_pressed", "value": 0}]
              }
            ]
          },
          {
            "description": "Ctrl+; to Escape",
            "manipulators": [
              {
                "type": "basic",
                "from": {
                  "key_code": "semicolon",
                  "modifiers": {
                    "mandatory": ["control"],
                    "optional": ["any"]
                  }
                },
                "to": [
                  {
                    "key_code": "escape"
                  }
                ]
              }
            ]
          },
          {
            "description": "Ctrl+Comma to Return",
            "manipulators": [
              {
                "type": "basic",
                "from": {
                  "key_code": "comma",
                  "modifiers": {
                    "mandatory": ["control"],
                    "optional": ["any"]
                  }
                },
                "to": [
                  {
                    "key_code": "return_or_enter"
                  }
                ]
              }
            ]
          },
          {
            "description": "Ctrl+Period to Backspace",
            "manipulators": [
              {
                "type": "basic",
                "from": {
                  "key_code": "period",
                  "modifiers": {
                    "mandatory": ["control"],
                    "optional": ["any"]
                  }
                },
                "to": [
                  {
                    "key_code": "delete_or_backspace"
                  }
                ]
              }
            ]
          },
          {
            "description": "Command+Comma to Shift+Enter",
            "manipulators": [
              {
                "type": "basic",
                "from": {
                  "key_code": "comma",
                  "modifiers": {
                    "mandatory": ["command"],
                    "optional": ["any"]
                  }
                },
                "to": [
                  {
                    "key_code": "return_or_enter",
                    "modifiers": ["shift"]
                  }
                ]
              }
            ]
          },
          {
            "description": "Ctrl+/ to Forward Delete",
            "manipulators": [
              {
                "type": "basic",
                "from": {
                  "key_code": "slash",
                  "modifiers": {
                    "mandatory": ["control"],
                    "optional": ["any"]
                  }
                },
                "to": [
                  {
                    "key_code": "delete_forward"
                  }
                ]
              }
            ]
          },
          {
            "description": "Ctrl+W to Alt+Backspace (delete word)",
            "manipulators": [
              {
                "type": "basic",
                "from": {
                  "key_code": "w",
                  "modifiers": {
                    "mandatory": ["control"],
                    "optional": ["any"]
                  }
                },
                "to": [
                  {
                    "key_code": "delete_or_backspace",
                    "modifiers": ["option"]
                  }
                ]
              }
            ]
          },
          {
            "description": "Ctrl+M to Tab",
            "manipulators": [
              {
                "type": "basic",
                "from": {
                  "key_code": "m",
                  "modifiers": {
                    "mandatory": ["control"],
                    "optional": ["any"]
                  }
                },
                "to": [
                  {
                    "key_code": "tab"
                  }
                ]
              }
            ]
          }
        ]
      }
    }
  ]
}
